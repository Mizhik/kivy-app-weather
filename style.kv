<MyGridLayout>

    name:name
    surname:surname
    age:age

    

    GridLayout:
        cols:1
        size:root.width, root.height
        
        GridLayout:
            cols:2

            Label:
                text:"Name"
            TextInput:
                id:name
                multiline:False
            
            Label:
                text:"Surname"
            TextInput:
                id:surname
                multiline:False

            Label:
                text:"Age"
            TextInput:
                id:age
                multiline:False
        Button:
            text:"Submit"
            font_size:32
            on_press:root.press()